public class gameState {
    public int numPlayers; //number of players
    public int supplyCount[treasure_map+1];  //this is the amount of a specific type of card given a specific number.
    public int embargoTokens[treasure_map+1];
    public int outpostPlayed;
    public int outpostTurn;
    public int whoseTurn;
    public int phase;
    public int numActions; /* Starts at 1 each turn */
    public int coins; /* Use as you see fit! */
    public int numBuys; /* Starts at 1 each turn */
    public int hand[MAX_PLAYERS][MAX_HAND];
    public int handCount[MAX_PLAYERS];
    public int deck[MAX_PLAYERS][MAX_DECK];
    public int deckCount[MAX_PLAYERS];
    public int discard[MAX_PLAYERS][MAX_DECK];
    public int discardCount[MAX_PLAYERS];
    public int playedCards[MAX_DECK];
    public int playedCardCount;
};

